<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/list_vertical_padding"
    android:paddingBottom="@dimen/list_vertical_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/answer_result_list_item_image_width"
        android:layout_height="@dimen/answer_result_list_item_image_height"
        android:id="@+id/image_answer_result_person"
        android:src="@mipmap/smiley_neutral"
        android:layout_marginEnd="15dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question #1: Correct"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:id="@+id/text_answer_result_headline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is Joe. You answered Jeff."
            android:id="@+id/text_answer_result_explanation" />

    </LinearLayout>


</LinearLayout>